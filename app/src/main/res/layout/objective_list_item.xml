<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:id="@+id/card_view">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/objective_card_header">

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/objective_title_textView"
                      android:background="@color/colorPrimaryDark"
                      android:textSize="20dp"
                      android:text="Title Placeholder"
                      android:padding="24dp"
                      android:textColor="@android:color/white"/>
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/objective_card_header">
            <ImageView
                android:id="@+id/objective_imageView"
                android:layout_width="86dp"
                android:layout_height="86dp"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"
                android:src="@drawable/reading"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/streak_text_view"
                android:textColor="@color/colorPrimary"
                android:layout_toRightOf="@+id/objective_imageView"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="0dp"
                android:textSize = "@dimen/objective_list_text_size"
                android:text="placeholder"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/total_text_view"
                android:textColor="@color/colorPrimary"
                android:textSize = "@dimen/objective_list_text_size"
                android:text="placeholder"

                android:layout_alignBottom="@+id/objective_imageView"
                android:layout_alignLeft="@+id/nextday_text_view"
                android:layout_alignStart="@+id/nextday_text_view"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nextday_text_view"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/expiration_text_view"
                android:layout_alignLeft="@+id/expiration_text_view"
                android:textSize = "@dimen/objective_list_text_size"
                android:text="placeholder"


                android:layout_marginTop="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/expiration_text_view"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/streak_text_view"
                android:layout_alignLeft="@+id/streak_text_view"
                android:textSize = "@dimen/objective_list_text_size"
                android:text="placeholder"


                android:layout_marginTop="3dp"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/objective_add_button"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:text="ADD STREAK DATA"
                style="?android:attr/borderlessButtonStyle"

                android:layout_below="@+id/total_text_view"
                android:layout_toRightOf="@+id/objective_details_button"
                android:layout_marginTop="16dp"
                android:minWidth="-100dp"


                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/objective_details_button"
                android:textColor="@color/colorAccent"
                android:textSize="14dp"
                android:text="DETAILS"


                android:layout_below="@+id/total_text_view"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="false"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                style="?android:attr/borderlessButtonStyle"
                android:minWidth="-10dp"
                />

        </RelativeLayout>



    </RelativeLayout>

</android.support.v7.widget.CardView>







